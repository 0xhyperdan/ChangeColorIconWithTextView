<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/id_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/tabbg"
        android:orientation="horizontal">

        <qiqi.love.you.view.ChangeColorIconView
            android:id="@+id/id_indicator_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            app:icon="@drawable/ic_menu_start_conversation"
            app:text="@string/tab_weixin"
            app:text_size="12sp" />

        <qiqi.love.you.view.ChangeColorIconView
            android:id="@+id/id_indicator_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            app:icon="@drawable/ic_menu_friendslist"
            app:text="@string/tab_contact"
            app:text_size="12sp" />

        <qiqi.love.you.view.ChangeColorIconView
            android:id="@+id/id_indicator_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            app:icon="@drawable/ic_menu_emoticons"
            app:text="@string/tab_find"
            app:text_size="12sp" />

        <qiqi.love.you.view.ChangeColorIconView
            android:id="@+id/id_indicator_four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            app:icon="@drawable/ic_menu_allfriends"
            app:text="@string/tab_me"
            app:text_size="12sp" />
    </LinearLayout>
</LinearLayout>
